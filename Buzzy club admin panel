  <script>
    const correctUser = "sikandarNishad";
    const correctPass = "Sikandarnishad2241";

    function login() {
      const user = document.getElementById("username").value;
      const pass = document.getElementById("password").value;
      const error = document.getElementById("loginError");

      if (user === correctUser && pass === correctPass) {
        document.getElementById("loginBox").classList.add("hidden");
        document.getElementById("adminPanel").classList.remove("hidden");
      } else {
        error.innerText = "‚ùå Invalid credentials";
      }
    }

    function submitResult() {
      const duration = document.getElementById("duration").value;
      const color = document.getElementById("color").value;
      const number = document.getElementById("number").value;
      const size = document.getElementById("size").value;

      console.log("‚úÖ Result Posted:", { duration, color, number, size });
      document.getElementById("statusMsg").innerText = "‚úÖ Result posted successfully!";

      // üëá Yahan Firebase save karne ka code lag sakta hai
      // db.ref("results/" + duration).set({ color, number, size });
    }
  </script>
