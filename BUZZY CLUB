<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>BUZZY CLUB</title>
  <style>
    body {
      font-family: sans-serif;
      background: #0f172a;
      color: white;
      padding: 20px;
    }
    input, button {
      margin: 10px 0;
      padding: 10px;
      width: 100%;
      border-radius: 8px;
      border: none;
      font-size: 16px;
    }
    button {
      background-color: #22c55e;
      color: white;
      cursor: pointer;
    }
    h2 {
      margin-top: 30px;
      border-bottom: 2px solid #38bdf8;
      padding-bottom: 5px;
    }
  </style>
</head>
<body>

  <h1>BUZZY CLUB üîê Login</h1>

  <input type="text" id="phone" placeholder="+91XXXXXXXXXX">
  <div id="recaptcha-container"></div>
  <button onclick="sendOTP()">Send OTP</button>

  <input type="text" id="otp" placeholder="Enter OTP">
  <button onclick="verifyOTP()">Verify OTP</button>

  <div id="loginSuccess" style="display:none;">
    <h2>üí∏ Withdraw Panel</h2>
    <input type="number" id="amount" placeholder="Enter Amount (Rs)">
    <input type="text" id="upi" placeholder="Your UPI ID">
    <button onclick="submitWithdraw()">Submit Withdraw Request</button>
  </div>

  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/9.23.0/firebase-app.js";
    import { getAuth, signInWithPhoneNumber, RecaptchaVerifier } from "https://www.gstatic.com/firebasejs/9.23.0/firebase-auth.js";
    import { getFirestore, collection, addDoc } from "https://www.gstatic.com/firebasejs/9.23.0/firebase-firestore.js";

    // üîß Replace with your Firebase config
    const firebaseConfig = {
      apiKey: "YOUR_API_KEY",
      authDomain: "YOUR_PROJECT_ID.firebaseapp.com",
      projectId: "YOUR_PROJECT_ID",
      storageBucket: "YOUR_PROJECT_ID.appspot.com",
      messagingSenderId: "SENDER_ID",
      appId: "APP_ID"
    };

    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);
    const db = getFirestore(app);

    window.recaptchaVerifier = new RecaptchaVerifier('recaptcha-container', {
      'size': 'normal',
      'callback': () => {}
    }, auth);

    let confirmationResult;

    window.sendOTP = async function() {
      const phone = document.getElementById('phone').value;
      confirmationResult = await signInWithPhoneNumber(auth, phone, window.recaptchaVerifier);
      alert("‚úÖ OTP Sent!");
    };

    window.verifyOTP = async function() {
      const otp = document.getElementById('otp').value;
      const result = await confirmationResult.confirm(otp);
      alert("üéâ Login Success: " + result.user.phoneNumber);
      document.getElementById('loginSuccess').style.display = 'block';
    };

    window.submitWithdraw = async function() {
      const amount = document.getElementById('amount').value;
      const upi = document.getElementById('upi').value;

      await addDoc(collection(db, "withdraw_requests"), {
        phone: auth.currentUser.phoneNumber,
        upi: upi,
        amount: amount,
        status: "pending",
        timestamp: new Date()
      });

      alert("üì® Withdraw request submitted!");
    };
  </script>

</body>
</html>
